<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/audio_banner"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/audio_banner_icon"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/music_transparent" />

            <ImageView
                android:id="@+id/audio_premium"
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/audio_banner"
                android:padding="10dp">

                <TextView
                    android:id="@+id/audio_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="This is the audio "
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/audio_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/audio_title"
                    android:fontFamily="sans-serif-light"
                    android:text="(Nation)"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/audio_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/audio_title"
                    android:fontFamily="sans-serif"
                    android:text="Sathish"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="italic" />

                <View
                    android:id="@+id/audio_view"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/audio_author" />

                <RatingBar
                    android:id="@+id/audio_rating"
                    style="@style/ngoRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/audio_author"
                    android:layout_marginTop="5dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="3.5" />

                <TextView
                    android:id="@+id/audio_price_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/audio_view"
                    android:layout_toStartOf="@+id/audio_price"
                    android:fontFamily="sans-serif-light"
                    android:text="INR: "
                    android:textAppearance="?android:textAppearance" />

                <TextView
                    android:id="@+id/audio_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/audio_view"
                    android:layout_marginLeft="5dp"
                    android:layout_toStartOf="@+id/audio_discount"
                    android:fontFamily="sans-serif-medium"
                    android:text="23.3"
                    android:textAppearance="?android:textAppearance"
                    android:textColor="@color/md_green_800" />

                <TextView
                    android:id="@+id/audio_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/audio_view"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="(10%)"
                    android:textAppearance="?android:textAppearance"
                    android:textColor="@color/md_green_400" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>